{
  "name": "CIRC - SOCKETS V2",
  "description": "An IRC client for Chrome (using chrome.sockets v2)",
  "version": "0.8.6",
  "minimum_chrome_version": "32",
  "manifest_version": 2,
  "icons": {
    "16": "static/icon/icon16.png",
    "48": "static/icon/icon48.png",
    "128": "static/icon/icon128.png"
  },

  "permissions": [
    "notifications",
    "storage",
    "fileSystem",
    "system.network",
    "unlimitedStorage"
  ],

  "sockets": {
    "tcp": {
      "connect": ""
    },
    "tcpServer": {
      "listen": ""
    }
  },

  "app": {
    "background": {
      "scripts": ["bin/background.js"]
    }
  },

  "sandbox": {
    "pages": [ "bin/script_frame.html" ]
  }
}
