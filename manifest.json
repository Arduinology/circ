{
  "name": "CIRC",
  "description": "An IRC client for Chrome",
  "version": "0.1.3",
  "manifest_version": 2,
  "icons": { "16": "icon/icon16.png", "48": "icon/icon48.png", "128": "icon/icon128.png" },

  "permissions": [
    "experimental",
    {"socket": [
      "tcp-connect"
    ]},
    "notifications",
    "storage",
    "fileSystem",
    "unlimitedStorage"
  ],

  "app": {
    "background": {
      "scripts": ["bin/background.js"]
    }
  },

  "sandbox": {
    "pages": [ "bin/script_frame.html" ]
  }
}
